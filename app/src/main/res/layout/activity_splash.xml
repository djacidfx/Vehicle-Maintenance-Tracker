<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:tag="layout/activity_splash_0"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="bottom|center_horizontal"
            android:background="@drawable/splash_bg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2">

            <ImageView
                android:layout_width="@dimen/_115sdp"
                android:layout_height="@dimen/_115sdp"
                android:src="@drawable/icon200" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <FrameLayout
                    android:id="@+id/frame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:layout_above="@+id/txtSubTitle">

                    <TextView
                        android:textSize="@dimen/_32sdp"
                        android:textColor="@color/font1"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/txtTitle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:shadowColor="@color/shadow"
                        android:shadowDx="3"
                        android:shadowDy="4"
                        android:shadowRadius="5"
                        android:fontFamily="@font/bold" />

                    <TextView
                        android:textSize="@dimen/_32sdp"
                        android:textColor="@color/accept_continue"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/txtTitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:text="@string/tracker"
                        android:shadowColor="@color/shadow"
                        android:shadowDx="3"
                        android:shadowDy="4"
                        android:shadowRadius="5"
                        android:fontFamily="@font/bold" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_250sdp"
                        android:src="@drawable/splash_bottom_img"
                        android:layout_alignParentBottom="true" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
